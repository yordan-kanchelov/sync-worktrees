{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    "types": ["node", "jest"]
  },
  "include": [
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/**/__tests__/**/*",
    "src/**/__mocks__/**/*",
    "src/test-setup.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}